<Window x:Class="SimpleCompressor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Компрессор" Height="200" Width="400">
    <StackPanel Margin="20">
        <Button Content="Архивировать файл" Click="Compress_Click" Margin="0,0,0,10"/>
        <Button Content="Разархивировать файл" Click="Decompress_Click" Margin="0,0,0,10"/>
        <ProgressBar x:Name="pbProgress" Height="20" Minimum="0" Maximum="100"/>
    </StackPanel>
</Window>